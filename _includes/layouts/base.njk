    <meta name="generator" content="{{ eleventy.generator }}">
    <script>
      if (localStorage.getItem('dm')) {
        document.documentElement.classList.add(localStorage.getItem('dm'));
      } else {
        let dm = matchMedia('(prefers-color-scheme:dark)').matches ? 'dark' : 'light';
        document.documentElement.classList.add(dm ? 'dark' : 'light');
        localStorage.setItem('dm', dm);
      }
    </script>
    <script defer data-domain="gingerchew.link" src="https://plausible.io/js/plausible.js"></script>
    {% set css %} {% include "index.css" %}{% endset %}
