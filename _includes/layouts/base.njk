      <button type="button" id="analyticsDisclaimer">Analytics</button>
    </footer>
    <dialog id="analyticsDialog">
      <div>
        <p>This site uses Plausible Analytics, <a href="https://plausible.io/">learn more here</a>, to give simple insights about the traffic this site is recieving. You can view the dashboard <a href="https://plausible.io/gingerchew.link">here.</a></p>
      </div>
    </dialog>
    <script type="module">
      let dm = matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light';
      if (localStorage.getItem('dm') !== dm) {
        localStorage.setItem('dm', dm);
      }
      toggleMode.onclick = () => {
        dm = dm === 'dark' ? 'light' : 'dark';
        localStorage.setItem('dm', dm);
        requestAnimationFrame(() => {
          document.documentElement.classList.remove('dark','light');
          document.documentElement.classList.add(dm);
        });
      }
      function closeDialog({ target }) {
        if (!target.matches('dialog')) return;

        analyticsDialog.close();
        document.removeEventListener('click', closeDialog);
      }
      analyticsDisclaimer.onclick = () => {
        analyticsDialog.showModal();
        document.addEventListener('click', closeDialog);
      }
    </script>
  </body>
</html>
